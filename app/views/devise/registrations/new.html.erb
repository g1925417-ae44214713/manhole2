<div class="col-lg-6 mx-auto">
  <div class="col-lg-12 mb-3">
    <h1 class="text-center logo"><%= t ".title" %></h1>
  </div>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <i class="fas fa-image"></i>
      <%= f.label :プロフィール写真 %>
      <%= f.file_field :avatar, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <i class="fas fa-envelope"></i>
      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "メールアドレスを入力してください" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <i class="fas fa-signature"></i>
      <%= f.text_field :name, autocomplete: "name", class: "form-control", placeholder: "" %>
    </div>

    <div class="form-froup">
      <i class="fas fa-closed-captioning"></i>
      <%= f.text_area :description, autocomplete: "description", class: "form-control", placeholder: "コメントを入力してください" %>
    </div>

    <div class="form-group">
      <i class="fas fa-key"></i>
      <% if @minimum_password_length %>
        <em>(<%= t(".minimum_password_length", length: @minimum_password_length) %>)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード(6文字以上)" %>
    </div>
    
    <div class="form-group">
    <i class="fas fa-key"></i>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード確認(再入力)" %>
    </div>
    
    <p class="actions">
      <%= f.submit t(".sign_up"), class: "btn btn-lg btn-secondary" %>
    </p>
    <p>
      <%= link_to t(".log_in"), user_session_path, class: "btn btn-lg btn-secondary" %>
    </p>
  <% end %>
</div>