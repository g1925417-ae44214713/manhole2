<%= render "shared/errors", obj: post %>
<%= form_with model: post, local:true do |f| %>

  <div class="form-group">
  <i class="fas fa-image"></i>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
  <i class="fas fa-location-arrow"></i>
    <%= f.text_area :place, class: "form-control", rows: "1", placeholder: "入手場所を入力してください"%>
  </div>

  <div class="form-group">
  <i class="fas fa-globe-americas"></i>
    <%= f.text_area :latitude, class: "form-control", rows: "1", placeholder: "緯度(EX: 90.00000)"%>
  </div>

  <div class="form-group">
  <i class="fas fa-globe-americas"></i>
    <%= f.text_area :longitude, class: "form-control", rows: "1", placeholder: "経度(EX: 180.00000)"%>
  </div>

  <div class="form-group">
  <i class="fas fa-calendar-alt"></i>
    <br>
    <%= f.date_select :date, class: "form-control", rows: "1" %>
  </div>

  <div class="form-group">
  <i class="fas fa-closed-captioning"></i>
    <%= f.text_area :caption, class: "form-control", rows: "5", placeholder: "コメントを入力してください"%>
  </div>

  <p>
    <%= f.submit t(".post"), class: "btn btn-block btn-primary" %>
  </p>
  <p>
    <%= link_to t(".back"), :back, class: "btn btn-block btn-secondary" %>
  </p>
<% end %>